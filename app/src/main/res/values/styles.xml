<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="brand">@color/orange</item>
        <item name="brandGradient">@color/red</item>
        <item name="shadow">@color/black</item>
        <item name="dark">@color/grayDark</item>
        <item name="darkAlpha80">@color/grayDarkAlpha80</item>
        <item name="darkMedium">@color/grayMedium</item>
        <item name="light">@color/white</item>
        <item name="lightDark">@color/ashDark</item>
        <item name="lightMedium">@color/ashMedium</item>

        <item name="fontFamily">@font/font_bold</item>
        <item name="android:textColor">?light</item>
        <item name="android:windowBackground">?dark</item>

        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/grayDark</item>

        <!-- Style for score stars in Preview -->
        <item name="android:ratingBarStyle">@style/score</item>

        <!--
            <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent</item>
            <item name="android:navigationBarColor" tools:targetApi="lollipop">@android:color/transparent</item>
            <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
            <item name="android:windowTranslucentNavigation" tools:targetApi="kitkat">true</item>
        -->

    </style>

    <style name="score" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/widget_score</item>
        <item name="android:minHeight">22dp</item>
        <item name="android:maxHeight">22dp</item>
    </style>

    <!-- ExoPlayer Custom Controls -->
    <style name="ExoMediaButton.Subtitles">
        <item name="android:src">@drawable/ic_subtitles_white_24dp</item>
        <item name="android:contentDescription">@string/subtitles</item>
    </style>
    <style name="ExoMediaButton.AudioTrack">
        <item name="android:src">@drawable/ic_headset_white_24dp</item>
        <item name="android:contentDescription">@string/language</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Player" parent="@style/AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@android:color/black</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>
