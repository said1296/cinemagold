<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.Navbar" parent="AppTheme">
        <item name="android:textViewStyle">@style/AppTheme.Navbar.TextView</item>
        <item name="imageButtonStyle">@style/AppTheme.Navbar.ImageButton</item>
    </style>
    <style name="AppTheme.Navbar.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:paddingLeft">@dimen/navbar_button_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/navbar_button_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/navbar_button_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/navbar_button_padding_vertical</item>
        <item name="android:textColor">@color/light_focused_brand</item>
    </style>
    <style name="AppTheme.Navbar.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:paddingLeft">@dimen/navbar_image_button_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/navbar_image_button_padding_horizontal</item>
        <item name="android:tint">@color/light_focused_brand</item>
    </style>
</resources>
