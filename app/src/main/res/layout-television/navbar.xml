<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/AppTheme.Navbar"
    android:id="@+id/navbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <include
        android:id="@+id/navbar_logo"
        layout="@layout/common_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/navbar_button_padding_horizontal"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:onClick="handleNavbarClick"
        android:focusable="true"
        android:id="@+id/navbar_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:onClick="handleNavbarClick"
        android:focusable="true"
        android:id="@+id/navbar_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/movies"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:onClick="handleNavbarClick"
        android:focusable="true"
        android:id="@+id/navbar_serialized"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_shows"/>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:theme="@style/AppTheme.Navbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end">
        <androidx.appcompat.widget.AppCompatImageButton
            android:onClick="handleNavbarClick"
            android:focusable="true"
            android:id="@+id/navbar_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_search_24dp"
            android:scaleType="fitCenter"
            android:nextFocusRight="@id/menu_avatar_active"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/menu_avatar_active"
            android:focusable="true"
            android:onClick="handleNavbarClick"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <include
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                layout="@layout/widget_avatar" />
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.AppCompatImageButton
            android:onClick="handleNavbarClick"
            android:focusable="true"
            android:id="@+id/navbar_menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_more_24dp"
            android:scaleType="fitCenter"
            android:nextFocusLeft="@id/menu_avatar_active"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>
