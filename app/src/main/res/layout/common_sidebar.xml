<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sidebar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@android:color/transparent"
    android:clipChildren="true">

        <LinearLayout
            android:id="@+id/sidebar_profiles"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_sidebar_top"
            android:paddingHorizontal="@dimen/sidebar_padding_horizontal"
            android:paddingVertical="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical">
                <include
                    android:id="@+id/sidebar_logo"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_height="25dp"
                    layout="@layout/common_logo"
                    android:layout_width="match_parent" />
                <LinearLayout
                    android:id="@+id/sidebar_profile_active"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/sidebar_padding_horizontal">
                        <ImageView
                            android:id="@+id/sidebar_profile_active_pic"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/bg_profile"
                            android:contentDescription="Profile picture"
                            android:padding="2dp"
                            android:src="@drawable/circle" />

                        <TextView
                            android:id="@+id/sidebar_profile_active_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:drawableEnd="@drawable/ic_arrow_drop_down_24dp"
                            android:drawableRight="@drawable/ic_arrow_drop_down_24dp"
                            android:text="Nombre"
                            android:textSize="@dimen/heading5" />
                </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/sidebar_profiles_separator"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="?lightDark"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sidebar_profiles" />

        <LinearLayout
            android:id="@+id/sidebar_options_main"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="?darkMedium"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/sidebar_padding_horizontal"
            android:paddingVertical="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sidebar_profiles_separator"
            app:layout_constraintBottom_toTopOf="@id/sidebar_options_main_end">

                <TextView
                    android:id="@+id/sidebar_devices"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_arrow_drop_down_24dp"
                    android:drawableRight="@drawable/ic_arrow_drop_down_24dp"
                    android:drawablePadding="2dp"
                    android:text="Dispositivos"
                    android:textSize="@dimen/heading5" />

                <TextView
                    android:id="@+id/sidebar_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sidebar_option_spacing"
                    android:text="Cuenta"
                    android:textSize="@dimen/heading5" />

                <TextView
                    android:id="@+id/sidebar_payment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sidebar_option_spacing"
                    android:text="Pagos"
                    android:textSize="@dimen/heading5" />

                <TextView
                    android:id="@+id/sidebar_help"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sidebar_option_spacing"
                    android:text="Ayuda"
                    android:textSize="@dimen/heading5" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sidebar_options_secondary"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_sidebar_bottom"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/sidebar_padding_horizontal"
            android:paddingVertical="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sidebar_options_main_end"
            app:layout_constraintBottom_toBottomOf="parent">
                <TextView
                    android:id="@+id/sidebar_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cerrar sesiÃ³n"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textSize="@dimen/heading5"
                    android:textColor="?lightMedium"/>
        </LinearLayout>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/sidebar_options_main_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="@dimen/sidebar_options_main_end" />


</androidx.constraintlayout.widget.ConstraintLayout>