<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/item_notification_text"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/heading5"/>
    <View
        app:layout_constraintTop_toBottomOf="@id/item_notification_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/notification_separator"
        android:layout_width="250dp"
        android:layout_height="0.5dp"
        android:background="?brand"
        android:layout_marginTop="@dimen/profile_separator_margin_top"/>
</androidx.constraintlayout.widget.ConstraintLayout>