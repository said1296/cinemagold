<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/navbar"
    android:weightSum="100"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_navbar"
    android:orientation="vertical">

    <TextView
        android:layout_weight="20"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <LinearLayout
        android:layout_weight="60"
        android:weightSum="100"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/navbar_home"
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="match_parent"
            android:src="@drawable/ic_home_24dp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/navbar_movie"
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="match_parent"
            android:src="@drawable/ic_movie_24dp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/navbar_serialized"
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="match_parent"
            android:src="@drawable/ic_serialized_24dp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/navbar_search"
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="match_parent"
            android:src="@drawable/ic_search_24dp" />

    </LinearLayout>

    <TextView
        android:layout_weight="20"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

</LinearLayout>