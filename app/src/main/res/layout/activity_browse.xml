<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/activity_browse"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:theme="@style/AppTheme"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragment_container_browse"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navbar"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:clickable="false"
            android:layout_height="@dimen/bottom_navbar_height"
            app:menu="@menu/navbar"
            app:itemIconTint="@color/selector_navbar"
            app:itemTextColor="?lightMedium"
            android:background="@drawable/bg_navbar"
            app:labelVisibilityMode="unlabeled"/>

    </RelativeLayout>


    <include
        layout="@layout/common_sidebar"
        />

</androidx.drawerlayout.widget.DrawerLayout>